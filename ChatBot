<body>

    <h1>üå±Plant Disease Detector</h1>
    

    <div class="chat-toggle" onclick="toggleChat()">üí¨</div>

   
    <div class="chat-container" id="chatbot">
        <div class="chat-header">üåø Farming Chatbot</div>
        <div class="chat-body" id="chatBody"></div>
        <div class="chat-input">
            <input type="text" id="userInput" placeholder="Ask about farming...">
            <button onclick="sendMessage()">Send</button>
        </div>
    </div>

    <script>
        function toggleChat() {
            let chatBox = document.getElementById("chatbot");
            chatBox.style.display = (chatBox.style.display === "none" || chatBox.style.display === "") ? "block" : "none";
        }

        function sendMessage() {
            let userInput = document.getElementById("userInput").value;
            let chatBody = document.getElementById("chatBody");

            if (userInput.trim() === "") return;

        
            chatBody.innerHTML += `<p><strong>You:</strong> ${userInput}</p>`;

            
            let response = getBotResponse(userInput.toLowerCase());

            setTimeout(() => {
                chatBody.innerHTML += `<p><strong>Bot:</strong> ${response}</p>`;
                chatBody.scrollTop = chatBody.scrollHeight;
            }, 1000);

            document.getElementById("userInput").value = "";
        }

        function getBotResponse(userInput) {
            const responses = {
                "hello": "Hello! How can I help with your farming queries? üåæ",
                "best fertilizer": "The best fertilizer depends on your crop type. Organic compost is always a good choice! üå±",
                "how to control pests": "Use natural predators like ladybugs or neem oil for pest control. üêû",
                "why my plants turning yellow": "It could be due to overwatering, lack of nutrients, or disease. Check soil moisture! üåø",
                "default": "I'm not sure about that. Try asking something else! ü§î"
            };

            return responses[userInput] || responses["default"];
        }
    </script>

